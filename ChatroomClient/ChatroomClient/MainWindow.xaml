<Window x:Class="ChatroomClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Stretch" Margin="20,0,100,20" Name="txt_message" VerticalAlignment="Bottom" />
        <Button Content="Send" Height="23" HorizontalAlignment="Left" Margin="416,268,0,0" Name="btn_Send" VerticalAlignment="Top" Width="75" Click="btn_Send_Click" />
        <RichTextBox Height="100" HorizontalAlignment="Stretch" Margin="20,20,20,50" Name="txt_Output" VerticalAlignment="Stretch" Width="200" IsReadOnly="True" />
    </Grid>
</Window>
