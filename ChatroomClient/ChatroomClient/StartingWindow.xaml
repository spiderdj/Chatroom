<Window x:Class="ChatroomClient.StartingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="226" Width="440" WindowStyle="SingleBorderWindow" ResizeMode="CanMinimize">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Center" Margin="0,-40,0,0" Name="txt_username" VerticalAlignment="Center" Width="217" />
        <Label Content="Username:" Height="28" HorizontalAlignment="Center" Name="label1" VerticalAlignment="Center" Margin="-300,-40,0,0" />
        <Label Content="IP Address:" Height="28" HorizontalAlignment="Center" Margin="-300,40,0,0" Name="label2" VerticalAlignment="Center" />
        <TextBox Height="23" HorizontalAlignment="Center" Margin="0,40,0,0" Name="txt_ip" VerticalAlignment="Center" Width="217" />
        <Button Content="Connect" Height="23" HorizontalAlignment="Right" Margin="10" Name="btn_connect" VerticalAlignment="Bottom" Width="75" Click="btn_connect_Click" />
        <Label Height="28" HorizontalAlignment="Center" Margin="0,20" Name="lbl_error" VerticalAlignment="Top" Foreground="Red" />
    </Grid>
</Window>
